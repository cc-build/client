Subject: [PATCH 3/4] adding new constants

Correcting nomenclature
---
 chef-bin/bin/cinc-windows-service   | 2 +-
 chef-config/lib/chef-config/dist.rb | 4 ++--
 lib/chef/dist.rb                    | 2 +-
 3 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/chef-bin/bin/cinc-windows-service b/chef-bin/bin/cinc-windows-service
index f48db8b19..02d18d4de 100755
--- a/chef-bin/bin/cinc-windows-service
+++ b/chef-bin/bin/cinc-windows-service
@@ -30,5 +30,5 @@ require "chef/application/windows_service"
 if Chef::Platform.windows?
   Chef::Application::WindowsService.mainloop
 else
-  puts "chef-cinc-service is only available on Windows platforms."
+  puts "cinc-windows-service is only available on Windows platforms."
 end
diff --git a/chef-config/lib/chef-config/dist.rb b/chef-config/lib/chef-config/dist.rb
index d46c9c99d..6099bf6c1 100644
--- a/chef-config/lib/chef-config/dist.rb
+++ b/chef-config/lib/chef-config/dist.rb
@@ -1,7 +1,7 @@
 module ChefConfig
   class Dist
-    # The chef executable name.
-    EXEC = "chef".freeze
+    # The chef executable name. Also used in directory names.
+    EXEC = "cinc".freeze
 
     # The client's alias (chef-client)
     CLIENT = "chef-client".freeze
diff --git a/lib/chef/dist.rb b/lib/chef/dist.rb
index 140434e4a..31bd8959b 100644
--- a/lib/chef/dist.rb
+++ b/lib/chef/dist.rb
@@ -42,7 +42,7 @@ class Chef
     SHELL = "cinc-shell".freeze
 
     # The chef-apply executable
-    APPLY = "chef-apply".freeze
+    APPLY = "cinc-apply".freeze
 
     # Configuration related constants
     # The chef-shell configuration file
